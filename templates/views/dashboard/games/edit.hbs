<!DOCTYPE html>
<html lang="en">
  <head>
    {{> dashboard/meta_header }}
  </head>
  <body id="page-top">
    <div id="wrapper">
      {{> dashboard/sidebar }}
      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          {{> dashboard/header }}
          <div class="container-fluid">
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <h1 class="h3 mb-0 text-gray-800">Chỉnh sửa kiểm tra</h1>
              <a href="{{ GetAdminPageUrl 'Tests'}}" class="btn btn-primary btn-sm"><i class="fas fa-arrow-circle-left mr-2"></i>Quay về</a>
            </div>
            {{#IfEqualBlock status 'success'}}<div class="alert alert-success small"><i class="fas fa-user-check mr-2"></i>Bài kiểm tra đã được cập nhật!</div>{{/IfEqualBlock}}
            {{#IfEqualBlock status 'error'}}
              <div class="alert alert-danger small">
                {{#each errors}}
                  <p class="my-0"><i class="fas fa-times mr-2"></i>{{ this }}</p>
                {{/each}}
              </div>
            {{/IfEqualBlock}}
            <div class="row">
              <div class="col-md-12">
                <form action="{{ GetAdminPageUrl 'Tests'}}/edit/{{ editTest.TestID }}" method="POST" class="mt-3">
                  <div class="row">
                    <div class="col-md-7">
                      <div class="form-group">
                        <label for="input-testname"><b>Tên bài kiểm tra:</b></label>
                        <input type="text" class="form-control" v-model="testName" id="input-testname" name="input-testname" value="{{ editTest.TestName }}">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-3">
                      <div class="form-group">
                        <label for="input-testname"><b>Thời gian làm bài:</b> <small>(phút)</small></label>
                        <input type="number" class="form-control" v-model="testTime" id="input-testtime" name="input-testtime" min="3" max="999" value="{{ editTest.TestTime }}">
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        <label for="input-testname"><b>Mã PIN:</b> <small>(5 chữ số, hệ thống chọn ngẫu nhiên nếu bỏ trống)</small></label>
                        <input type="text" class="form-control" v-model="testPINCode" id="input-pincode" name="input-pincode" min="10000" max="99999" value="{{ editTest.PINCode }}">
                      </div>
                    </div>
                  </div>
                  <div>
                    <button id="submit-update" name="submit-update" type="submit" class="btn btn-primary mx-auto"><i class="fas fa-plus-circle mr-2"></i>Cập nhật</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <!-- Footer -->
        {{> dashboard/footer }}
        <!-- End of Footer -->
      </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    {{> dashboard/meta_footer }}
  </body>
</html>
