<!DOCTYPE html>
<html lang="en">
  <head>
    {{> dashboard/meta_header }}
  </head>
    <body class="bg-gradient-primary">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10 col-lg-12 col-md-9">
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div id="app-login" class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Chào mừng trở lại! {{ redirect }}</h1>
                                    </div>
                                    <form class="user">
                                        <div class="form-group">
                                            <input type="text" v-model="username" class="form-control form-control-user" id="txbUsername" placeholder="Nhập tên tài khoản">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" v-model="password" class="form-control form-control-user" id="txbPassword" placeholder="Mật khẩu">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" v-model="rememberLogin" id="checkRemember">
                                                <label class="custom-control-label" for="checkRemember">Ghi nhớ đăng nhập</label>
                                            </div>
                                        </div>
                                        <button @click="login" class="btn btn-primary btn-user btn-block">Đăng nhập</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="register.html">Create an Account!</a>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> dashboard/meta_footer }}
        <script src="js/vue.js"></script>
        <script>
            var vm = new Vue({
                el: "#app-login",
                delimiters: ["<?",">"],
                data: {
                    redirect: '{{ redirect }}',
                    username: '',
                    password: '',
                    rememberLogin: false,
                    loginError: ''
                },
                methods: {
                    login: function(e) {
                        e.preventDefault();
                        alert(this.username + '/' + this.password);
                    }
                }
            });
        </script>
    </body>
</html>